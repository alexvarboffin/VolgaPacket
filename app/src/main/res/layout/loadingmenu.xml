<?xml version="1.0" encoding="utf-8" ?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/edgar_loagin_kranin"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ff7e7e7e">

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/log"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/lm_bg_1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:alpha="0.0"
        android:scaleType="fitXY"
        android:src="@drawable/lm_bg_1" />

    <ImageView
        android:id="@+id/lm_bg_2"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:alpha="0.0"
        android:scaleType="fitXY"
        android:src="@drawable/lm_bg_2" />

    <ImageView
        android:id="@+id/lm_bg_3"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:alpha="0.0"
        android:scaleType="fitXY"
        android:src="@drawable/lm_bg_3" />

    <ImageView
        android:id="@+id/lm_bg_4"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:alpha="0.0"
        android:scaleType="fitXY"
        android:src="@drawable/lm_bg_4" />

    <ImageView
        android:id="@+id/lm_bg_5"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:alpha="0.0"
        android:scaleType="fitXY"
        android:src="@drawable/lm_bg_5" />

    <ImageView
        android:id="@+id/lm_bg_6"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:alpha="0.0"
        android:scaleType="fitXY"
        android:src="@drawable/lm_bg_0" />

    <ImageView
        android:id="@+id/gameloading_logo"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:src="@drawable/logo_big"
        android:visibility="visible" />

    <TextView
        android:id="@+id/lm_message"
        android:layout_width="@dimen/_200sdp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginStart="@dimen/_29sdp"
        android:layout_marginBottom="@dimen/_17sdp"
        android:fontFamily="@font/ttnorms_medium"
        android:gravity="bottom"
        android:text="  "
        android:textColor="#9A9494"
        android:textSize="@dimen/_10sdp"
        android:visibility="visible" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="@dimen/_17sdp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/lm_status"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/_15sdp"
            android:layout_weight="1.0"
            android:fontFamily="@font/ttnorms_medium"
            android:gravity="right"
            android:text="Загрузка игры..."
            android:textColor="#ffffffff"
            android:textSize="@dimen/_10sdp" />

        <ImageView
            android:id="@+id/lm_candle_1"
            android:layout_width="@dimen/_9sdp"
            android:layout_height="@dimen/_23sdp"
            android:layout_marginEnd="@dimen/_2sdp"
            android:alpha="0.0"
            android:src="@drawable/ic_lm_candle" />

        <ImageView
            android:id="@+id/lm_candle_2"
            android:layout_width="@dimen/_9sdp"
            android:layout_height="@dimen/_23sdp"
            android:layout_marginEnd="@dimen/_2sdp"
            android:alpha="0.0"
            android:src="@drawable/ic_lm_candle" />

        <ImageView
            android:id="@+id/lm_candle_3"
            android:layout_width="@dimen/_9sdp"
            android:layout_height="@dimen/_23sdp"
            android:layout_marginEnd="@dimen/_2sdp"
            android:alpha="0.0"
            android:src="@drawable/ic_lm_candle" />

        <ImageView
            android:id="@+id/lm_candle_4"
            android:layout_width="@dimen/_9sdp"
            android:layout_height="@dimen/_23sdp"
            android:layout_marginEnd="@dimen/_2sdp"
            android:alpha="0.0"
            android:src="@drawable/ic_lm_candle" />

        <ImageView
            android:id="@+id/lm_candle_5"
            android:layout_width="@dimen/_9sdp"
            android:layout_height="@dimen/_23sdp"
            android:layout_marginEnd="@dimen/_25sdp"
            android:alpha="0.0"
            android:src="@drawable/ic_lm_candle" />
    </LinearLayout>
</FrameLayout>
